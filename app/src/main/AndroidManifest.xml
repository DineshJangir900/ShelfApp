<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ShelfApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bookshelf"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bookshelf"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShelfApp"
        tools:targetApi="34">
        <activity
            android:name=".ui.user.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.LoginScreenActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splashScreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.bookDetails.BookDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.HomeScreenActivity"
            android:exported="false" />
    </application>

</manifest>